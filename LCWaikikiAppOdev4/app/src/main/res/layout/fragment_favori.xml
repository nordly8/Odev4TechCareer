<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.FavoriFragment">

    <ImageView
        android:id="@+id/imageViewSepet"
        android:layout_width="288dp"
        android:layout_height="269dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/favoriresim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/MaterialAlertDialog.Material3.Title.Text"
        android:id="@+id/sepetView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Henüz Favori Ürünün Yok.."
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSepet" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipSepet"
        style="@style/MaterialAlertDialog.Material3"
        android:layout_width="197dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text="ALIŞVERİŞE DEVAM ET "
        android:textColor="#171616"
        android:textColorHint="#191717"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sepetView"
        app:textStartPadding="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>