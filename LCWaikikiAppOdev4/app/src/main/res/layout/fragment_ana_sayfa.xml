<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.view.AnaSayfaFragment"
    android:id="@+id/constraint">



    <ScrollView
        android:id="@+id/scrollAnaSayfa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipUrun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ürünlere git.."
                android:layout_margin="5dp">

            </com.google.android.material.chip.Chip>

            <HorizontalScrollView
                android:layout_gravity="start"
                android:id="@+id/horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:scaleType="fitStart"
                        android:id="@+id/resim1"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:src="@drawable/indirim">

                    </ImageView>

                    <ImageView
                        android:clickable="true"
                        android:id="@+id/resim2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/lcw">

                    </ImageView>

                    <ImageView
                        android:clickable="true"
                        android:id="@+id/resim3"
                        android:layout_width="wrap_content"
                        android:layout_height="200dp"
                        android:src="@drawable/ramazanjpg">

                    </ImageView>

                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal"
               >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:id="@+id/resim4"
                    android:src="@drawable/lcw">

                </ImageView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/kampanya"
                    android:clickable="true"
                    android:id="@+id/resim5">

                </ImageView>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:clickable="true"
                android:id="@+id/resim6"
                android:src="@drawable/urunler">

            </ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="275dp"
                android:clickable="true"
                android:id="@+id/resim7"
                android:src="@drawable/yetiskin">

            </ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/ontluzeri"
                android:clickable="true"
                android:id="@+id/resim8">

            </ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/bayramjpg"
                android:clickable="true"
                android:id="@+id/resim9">

            </ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/disneyjpg"
                android:clickable="true"
                android:id="@+id/resim10">

            </ImageView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>